# Copy this file to `.env` and fill in values

# MongoDB connection string (encode special characters in username/password)
# Format examples:
# - Local: mongodb://localhost:27017/exam_management
# - Atlas: mongodb+srv://<user>:<password>@<cluster-url>/<db>?retryWrites=true&w=majority
MONGO_URI=

# App port
PORT=5000

# Node environment
NODE_ENV=development

# JWT secret for auth (use a long random string)
JWT_SECRET=change_me_to_a_secure_random_value
